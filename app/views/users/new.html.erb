<section class="user-register">
  <div class="container">

    #<%# if (@already_registered) ! %>
    #<%# <h2>The specified address has already been registered. Please try a different one.</h2> ! %>

    <%= form_for :user, url: '/users', :html => {:class => 'form-signin'} do |f| %>
      <h1 class="form-signin-heading">Register</h1>


      <label for="inputFirstName" class="sr-only">First Name:</label>
      <div class="form-group"><%= f.text_field :first_name, class: 'form-control form-control-lg', id: 'inputFirstName', placeholder: "First Name" %></div>
      <label for="inputLastName" class="sr-only">Last Name:</label>
      <div class="form-group"><%= f.text_field :last_name, class: 'form-control form-control-lg', id: 'inputLastName', placeholder: "Last Name" %></div>
      <label for="inputEmail" class="sr-only">Email:</label>
      <div class="form-group"><%= f.text_field :email, class: 'form-control form-control-lg', id: 'inputEmail', placeholder: "Email address" %></div>
      <label for="inputPassword" class="sr-only">Password:</label>
      <div class="form-group"><%= f.password_field :password, class: 'form-control form-control-lg', id: 'inputPassword', placeholder: "Password" %></div>
      <label for="inputConfirmation" class="sr-only">Password Confirmation</label>
      <div class="form-group"><%= f.password_field :password_confirmation, class: 'form-control mt-2', id: 'inputConfirmation', placeholder: "Confirm Password" %></div>
      <div class="form-group"><%= f.submit "Submit", class: 'btn btn-lg btn-primary center-block' %></div>


    <% end %>
  </div>

</section>